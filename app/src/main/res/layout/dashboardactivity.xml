<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/login_background"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dog or Cat?"
        android:textSize="24sp"
        android:textColor="#3B84F1"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>
    <ImageView
        android:id="@+id/captured_image_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corner_custom_2"
        android:contentDescription="Imagem capturada"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/open_camera_button"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#65D05C"
        android:padding="18dp"
        android:text="Take a picture"
        android:textColor="#E8E9E9"
        android:textSize="16sp" />
    <Button
        android:id="@+id/finishSession"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:textColor="#E8E9E9"
        android:padding="18dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:background="#D54B4B"
        android:text="End session"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="190dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="22sp"
        android:textSize="20sp"
        android:textColor="#3B84F1"
        android:text="Model predict:"
        android:id="@+id/prediction_text_model"
        android:layout_height="wrap_content"/>

</LinearLayout>
